<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>co.unal.examsUnal.Presentation.Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>co.unal.examsUnal.Presentation.Servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>co.unal.examsUnal.Presentation.Servlets.SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddQuestionServlet</servlet-name>
        <servlet-class>co.unal.examsUnal.Presentation.Servlets.AddQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddQuestionServlet</servlet-name>
        <url-pattern>/AddQuestionServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowQuestionServlet</servlet-name>
        <servlet-class>co.unal.examsUnal.Presentation.Servlets.ShowQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowQuestionServlet</servlet-name>
        <url-pattern>/ShowQuestionServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowQuestionDeleteServlet</servlet-name>
        <servlet-class>co.unal.examsUnal.Presentation.Servlets.ShowQuestionDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowQuestionDeleteServlet</servlet-name>
        <url-pattern>/ShowQuestionDeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteQuestionServlet</servlet-name>
        <servlet-class>co.unal.examsUnal.Presentation.Servlets.DeleteQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteQuestionServlet</servlet-name>
        <url-pattern>/DeleteQuestionServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminExamsServlet</servlet-name>
        <servlet-class>co.unal.examsUnal.Presentation.Servlets.AdminExamsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminExamsServlet</servlet-name>
        <url-pattern>/AdminExamsServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
